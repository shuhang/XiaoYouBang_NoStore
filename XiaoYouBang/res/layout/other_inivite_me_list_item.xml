<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:background="@color/white"
	    >
	    
	    <ImageView 
	        android:id="@+id/other_invite_me_head"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_marginTop="20dp"
	        android:layout_marginLeft="20dp"
	        android:contentDescription="@string/app_name"
	        android:src="@drawable/head"
	        />
	    
	    <TextView 
	        android:id="@+id/other_invite_me_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/heavy_gray"
			android:textSize="@dimen/text_size_2"
			android:layout_alignTop="@+id/other_invite_me_head"
			android:layout_toRightOf="@+id/other_invite_me_head"
			android:layout_marginLeft="12dp"
			/>
	    
	    <TextView 
	        android:id="@+id/other_invite_me_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/heavy_gray"
			android:textSize="@dimen/text_size_2"
			android:layout_alignTop="@+id/other_invite_me_name"
			android:layout_alignParentRight="true"
			android:layout_marginRight="12dp"
			/>
	    
	    <TextView 
	        android:id="@+id/other_invite_me_info"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:textSize="@dimen/text_size_2"
			android:layout_below="@+id/other_invite_me_head"
			android:layout_alignLeft="@+id/other_invite_me_head"
			android:layout_marginTop="15dp"
			android:layout_marginRight="12dp"
			android:lineSpacingMultiplier="1.2"
			/>
	    
	    <View 
	        android:id="@+id/other_invite_me_line"
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:layout_below="@+id/other_invite_me_info"
			android:layout_marginLeft="12dp"
			android:layout_marginRight="12dp"
			android:layout_marginTop="10dp"
			android:background="@color/gray"
	        />
	
	</RelativeLayout>