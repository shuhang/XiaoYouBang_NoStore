<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
    	android:background="@color/white"
	    >
	    
    	<TextView 
	        android:id="@+id/me_invite_other_temp1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/invite_text_9"
			android:textColor="@color/heavy_gray"
			android:textSize="@dimen/text_size_2"
			android:layout_marginTop="20dp"
			android:layout_marginLeft="12dp"
			/>
	    
	    <TextView 
	        android:id="@+id/me_invite_other_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:textStyle="bold"
			android:textSize="@dimen/text_size_2"
			android:layout_alignTop="@+id/me_invite_other_temp1"
			android:layout_toRightOf="@+id/me_invite_other_temp1"
			/>
	    
	    <TextView 
	        android:id="@+id/me_invite_other_temp2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/invite_text_10"
			android:textColor="@color/heavy_gray"
			android:textSize="@dimen/text_size_2"
			android:layout_alignTop="@+id/me_invite_other_temp1"
			android:layout_toRightOf="@+id/me_invite_other_name"
			/>

	    <TextView 
	        android:id="@+id/me_invite_other_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/heavy_gray"
			android:textSize="@dimen/text_size_3"
			android:layout_alignTop="@+id/me_invite_other_name"
			android:layout_alignParentRight="true"
			android:layout_marginRight="12dp"
			/>
	    
	    <TextView 
	        android:id="@+id/me_invite_other_info"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:textSize="@dimen/text_size_2"
			android:layout_below="@+id/me_invite_other_name"
			android:layout_alignLeft="@+id/me_invite_other_temp1"
			android:layout_marginTop="15dp"
			android:layout_marginRight="12dp"
			android:lineSpacingMultiplier="1.3"
			android:layout_marginLeft="10dp"
			/>

	    <TextView 
	        android:id="@+id/me_invite_other_symbol"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/invite_text_7"
			android:textColor="@color/text_red"
			android:textSize="@dimen/text_size_2"
			android:layout_below="@+id/me_invite_other_info"
			android:layout_marginTop="5dp"
			android:layout_alignParentRight="true"
			android:layout_marginRight="12dp"
			/>
	    
	    <ImageView 
	        android:id="@+id/me_invite_other_check"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_alignBottom="@+id/me_invite_other_symbol"
	        android:layout_toLeftOf="@+id/me_invite_other_symbol"
	        android:layout_marginRight="5dp"
	        android:visibility="invisible"
	        android:contentDescription="@string/app_name"
	        android:src="@drawable/yes"
	        />
	    
	    <View 
	        android:id="@+id/me_invite_other_line"
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:layout_below="@+id/me_invite_other_symbol"
			android:layout_marginLeft="12dp"
			android:layout_marginRight="12dp"
			android:layout_marginTop="10dp"
			android:background="@color/light_gray"
	        />
	
	</RelativeLayout>