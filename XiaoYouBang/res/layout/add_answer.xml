<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    
    <RelativeLayout 
        android:id="@+id/add_answer_layout1"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_alignParentTop="true"
		android:background="@color/bg_red"
		>
		
        <Button 
		    android:id="@+id/add_answer_button_back"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:layout_centerVertical="true"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="3dp"
		    android:textColor="@color/white"
			android:textSize="@dimen/text_size_1"
			android:background="@null"
		    />
        
        <TextView 
            android:id="@+id/add_answer_title"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:text="@string/add_answer_text1"
		    android:textColor="@color/white"
		    android:textSize="@dimen/text_size_1"
		    android:layout_centerHorizontal="true"
		    />
		    
		<Button 
		    android:id="@+id/add_answer_button_finish"
		    android:layout_width="60dp"
		    android:layout_height="40dp"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="15dp"
		    android:textColor="@color/white"
		    android:textSize="@dimen/text_size_1"
		    android:text="@string/add_question_text2"
		    android:background="@null"
		    />
        
	</RelativeLayout>
	
    <TextView 
        android:id="@+id/add_answer_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:lineSpacingMultiplier="1.3"
        android:gravity="left"
        android:ellipsize="end"
        android:textSize="@dimen/text_size_2"
        android:textColor="@color/heavy_gray"
        android:background="@color/light_gray"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:layout_below="@+id/add_answer_layout1"
        />
	
    <EditText 
        android:id="@+id/add_answer_input"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/add_answer_question"
	    android:layout_above="@+id/add_answer_picture"
	    android:background="#ffffff"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:paddingTop="15dp"
	    android:paddingBottom="10dp"
	    android:textSize="@dimen/text_size_1"
	    android:hint="@string/add_answer_hint1"
		android:inputType="textMultiLine"
		android:lineSpacingMultiplier="1.3"
		android:singleLine="false"
		android:scrollHorizontally="false"
		android:gravity="top"
		android:maxLength="3000"
        />
    
    <Button 
        android:id="@+id/add_answer_picture"
        android:layout_width="40dp"
	    android:layout_height="40dp"
	    android:layout_above="@+id/add_answer_layout2"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="15dp"
	    android:layout_marginBottom="15dp"
	    android:background="@drawable/picture"
	    android:textColor="@color/white"
	    android:gravity="center|bottom"
	    android:paddingBottom="3dp"
	    android:textSize="@dimen/text_size_3"
        />
	
    <RelativeLayout 
        android:id="@+id/add_answer_layout2"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_alignParentBottom="true"
		android:background="@color/gray"
		>
		
        <CheckBox 
            android:id="@+id/add_answer_checkbox"
            android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:layout_centerVertical="true"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="15dp"
		    android:checked="false"
		    android:button="@null"
		    android:background="@drawable/check_no"
            />
        
        <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:text="@string/hide_name1"
		    android:textColor="@color/white"
		    android:textSize="@dimen/text_size_1"
		    android:layout_toRightOf="@+id/add_answer_checkbox"
		    android:layout_marginLeft="10dp"
		    />
        
	</RelativeLayout>

</RelativeLayout>
