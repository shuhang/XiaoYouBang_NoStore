<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/white"
	>
	
    <RelativeLayout 
        android:id="@+id/tab_4_layout_up"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="@color/red"
		>
		
        <ImageButton 
            android:id="@+id/tab_4_button"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:paddingLeft="5dp"
			android:paddingRight="5dp"
			android:paddingTop="5dp"
			android:paddingBottom="5dp"
		    android:layout_centerVertical="true"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="15dp"
		    android:src="@drawable/menu"
		    android:contentDescription="@string/app_name"
		    android:background="@null"
		    />
        
        <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:text="@string/friend_info_7"
		    android:textColor="@color/white"
		    android:textSize="@dimen/text_size_1"
		    android:layout_toRightOf="@+id/tab_4_button"
		    android:layout_marginLeft="20dp"
		    />
        
        <Button 
            android:id="@+id/tab_4_edit"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="@string/tab_text_4"
            android:textColor="@color/white"
		    android:textSize="@dimen/text_size_1"
		    android:background="@null"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="10dp"
            />
        
	</RelativeLayout>
	
    <ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:layout_below="@+id/tab_4_layout_up"
	    >
	    <RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" 
		    >
		    
		    <ImageView 
			    android:id="@+id/tab_4_info_head"
			    android:layout_width="50dp"
			    android:layout_height="50dp"
			    android:contentDescription="@string/app_name"
			    android:src="@drawable/head"
			    android:layout_marginLeft="20dp"
			    android:layout_marginTop="20dp"
			    />
			    
			<TextView 
			    android:id="@+id/tab_4_info_name"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/text_size_2"
			    android:textColor="@color/black"
			    android:layout_alignTop="@+id/tab_4_info_head"
			    android:layout_toRightOf="@+id/tab_4_info_head"
			    android:layout_marginLeft="15dp"
			    />
			
			<TextView 
			    android:id="@+id/tab_4_info_sex"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/text_size_2"
			    android:textColor="@color/gray"
			    android:layout_alignLeft="@+id/tab_4_info_name"
			    android:layout_below="@+id/tab_4_info_name"
			    android:layout_marginTop="10dp"
			    />
			
			<TextView 
			    android:id="@+id/tab_4_info_birthday"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/text_size_2"
			    android:textColor="@color/gray"
			    android:layout_alignTop="@+id/tab_4_info_sex"
			    android:layout_toRightOf="@+id/tab_4_info_sex"
			    android:layout_marginLeft="10dp"
			    />
			
			<TextView 
			    android:id="@+id/tab_4_info_praise_count"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/text_size_2"
			    android:textColor="@color/red"
			    android:gravity="center|right"
			    android:layout_alignTop="@+id/tab_4_info_name"
			    android:layout_alignParentRight="true"
			    android:layout_marginRight="20dp"
			    />
			
			<TextView 
			    android:id="@+id/tab_4_info_pku"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/text_size_2"
			    android:textColor="@color/gray"
			    android:layout_alignLeft="@+id/tab_4_info_head"
			    android:layout_below="@+id/tab_4_info_head"
			    android:layout_marginTop="15dp"
			    />
			
			<TextView 
			    android:id="@+id/tab_4_info_job"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/text_size_2"
			    android:textColor="@color/gray"
			    android:layout_alignLeft="@+id/tab_4_info_pku"
			    android:layout_below="@+id/tab_4_info_pku"
			    android:layout_marginTop="5dp"
			    />
			
			<TextView 
			    android:id="@+id/tab_4_info_home"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/text_size_2"
			    android:textColor="@color/gray"
			    android:layout_alignLeft="@+id/tab_4_info_job"
			    android:layout_below="@+id/tab_4_info_job"
			    android:layout_marginTop="5dp"
			    />
			
			<TextView 
			    android:id="@+id/tab_4_info_qq"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/text_size_2"
			    android:textColor="@color/gray"
			    android:layout_alignLeft="@+id/tab_4_info_home"
			    android:layout_below="@+id/tab_4_info_home"
			    android:layout_marginTop="5dp"
			    />
			
			<TextView 
			    android:id="@+id/tab_4_info_tag"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/text_size_2"
			    android:textColor="@color/gray"
			    android:layout_alignLeft="@+id/tab_4_info_qq"
			    android:layout_below="@+id/tab_4_info_qq"
			    android:layout_marginTop="15dp"
			    android:layout_marginRight="20dp"
			    android:lineSpacingMultiplier="1.3"
			    />
			
			<View 
		        android:id="@+id/tab_4_info_line2"
		        android:layout_width="match_parent"
		        android:layout_height="10dp"
		        android:layout_below="@+id/tab_4_info_tag"
		        android:layout_marginTop="15dp"
		        android:background="@color/light_gray"
		        />
			
			<RelativeLayout 
			    android:id="@+id/tab_4_info_layout1"
			    android:layout_width="match_parent"
			    android:layout_height="50dp"
			    android:layout_below="@+id/tab_4_info_line2"
			    android:background="@drawable/question_list_item_background"
			    android:clickable="true"
			    >
			    
			    <TextView 
				    android:id="@+id/tab_4_info_layout1_symbol"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="@string/friend_info_3"
				    android:textSize="@dimen/text_size_2"
				    android:textColor="@color/gray"
				    android:layout_centerVertical="true"		    
				    android:layout_marginLeft="20dp"
				    />
			    
			    <TextView 
				    android:id="@+id/tab_4_info_layout1_name"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="@string/friend_info_6"
				    android:textSize="@dimen/text_size_2"
				    android:textColor="@color/gray"
				    android:layout_centerVertical="true"		    
				    android:layout_alignParentRight="true"
				    android:layout_marginRight="20dp"
				    />
			    
			    <ImageView 
				    android:id="@+id/tab_4_info_layout1_head"
				    android:layout_width="30dp"
				    android:layout_height="30dp"
				    android:contentDescription="@string/app_name"
				    android:src="@drawable/head"
				    android:visibility="invisible"
				    android:layout_toLeftOf="@+id/tab_4_info_layout1_name"
				    android:layout_marginRight="5dp"
				    android:layout_centerVertical="true"
				    />
			    
			</RelativeLayout>
			
			<View 
		        android:id="@+id/tab_4_info_line3"
		        android:layout_width="match_parent"
		        android:layout_height="0.5dp"
		        android:layout_below="@+id/tab_4_info_layout1"
		        android:background="@color/gray"
		        />
			
			<RelativeLayout 
			    android:id="@+id/tab_4_info_layout2"
			    android:layout_width="match_parent"
			    android:layout_height="50dp"
			    android:layout_below="@+id/tab_4_info_line3"
			    android:background="@drawable/question_list_item_background"
			    android:clickable="true"
			    >
			    
			    <TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="@string/friend_info_4"
				    android:textSize="@dimen/text_size_2"
				    android:textColor="@color/gray"
				    android:layout_centerVertical="true"		    
				    android:layout_marginLeft="20dp"
				    />
			    
			    <TextView 
				    android:id="@+id/tab_4_info_question_count"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textSize="@dimen/text_size_2"
				    android:textColor="@color/gray"
				    android:layout_centerVertical="true"		    
				    android:layout_alignParentRight="true"
				    android:layout_marginRight="20dp"
				    />
			    
			</RelativeLayout>
			
			<View 
		        android:id="@+id/tab_4_info_line4"
		        android:layout_width="match_parent"
		        android:layout_height="0.5dp"
		        android:layout_below="@+id/tab_4_info_layout2"
		        android:background="@color/gray"
		        />
			
			<RelativeLayout 
			    android:id="@+id/tab_4_info_layout3"
			    android:layout_width="match_parent"
			    android:layout_height="50dp"
			    android:layout_below="@+id/tab_4_info_line4"
			    android:background="@drawable/question_list_item_background"
			    android:clickable="true"
			    >
			    
			    <TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="@string/friend_info_5"
				    android:textSize="@dimen/text_size_2"
				    android:textColor="@color/gray"
				    android:layout_centerVertical="true"		    
				    android:layout_marginLeft="20dp"
				    />
			    
			    <TextView 
				    android:id="@+id/tab_4_info_answer_count"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textSize="@dimen/text_size_2"
				    android:textColor="@color/gray"
				    android:layout_centerVertical="true"		    
				    android:layout_alignParentRight="true"
				    android:layout_marginRight="20dp"
				    />
			    
			</RelativeLayout>
			
			<View
		        android:layout_width="match_parent"
		        android:layout_height="0.5dp"
		        android:layout_below="@+id/tab_4_info_layout3"
		        android:background="@color/gray"
		        />
		
		</RelativeLayout>
	    
	</ScrollView>
	
</RelativeLayout>