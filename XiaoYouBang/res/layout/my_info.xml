<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/white"
	>
	
    <RelativeLayout 
        android:id="@+id/my_info_layout_up"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="@color/bg_red"
		>

        <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:text="@string/friend_info_7"
		    android:textColor="@color/white"
		    android:textSize="@dimen/text_size_1"
		    android:layout_centerHorizontal="true"
		    />
        
        <Button 
            android:id="@+id/my_info_edit"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="@string/tab_text_4"
            android:textColor="@color/white"
		    android:textSize="@dimen/text_size_1"
		    android:background="@null"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="10dp"
            />
        
	</RelativeLayout>
	
    <ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:layout_below="@+id/my_info_layout_up"
	    >
	    <RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" 
		    >
		    
		    <ImageView 
			    android:id="@+id/my_info_info_head"
			    android:layout_width="100dp"
			    android:layout_height="100dp"
			    android:contentDescription="@string/app_name"
			    android:src="@drawable/head"
			    android:layout_marginLeft="20dp"
			    android:layout_marginTop="20dp"
			    />
			    
			<TextView 
			    android:id="@+id/my_info_info_name"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/text_size_1"
			    android:textColor="@color/black"
			    android:layout_alignTop="@+id/my_info_info_head"
			    android:layout_toRightOf="@+id/my_info_info_head"
			    android:layout_marginLeft="15dp"
			    />
			
			<ImageView 
			    android:id="@+id/my_info_info_sex"
			    android:layout_width="30dp"
			    android:layout_height="30dp"
			    android:contentDescription="@string/app_name"
			    android:src="@drawable/male_color"
			    android:layout_below="@+id/my_info_info_birthday"
			    android:layout_alignLeft="@+id/my_info_info_birthday"
			    android:layout_marginTop="10dp"
			    />
			
			<TextView 
			    android:id="@+id/my_info_info_birthday"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/text_size_2"
			    android:textColor="@color/heavy_gray"
			    android:layout_below="@+id/my_info_info_name"
			    android:layout_alignLeft="@+id/my_info_info_name"
			    android:layout_marginTop="5dp"
			    />
			
			<TextView 
			    android:id="@+id/my_info_info_praise_count"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/text_size_2"
			    android:textColor="@color/text_red"
			    android:gravity="center|right"
			    android:layout_alignTop="@+id/my_info_info_name"
			    android:layout_alignParentRight="true"
			    android:layout_marginRight="20dp"
			    />
			
			<TextView 
			    android:id="@+id/my_info_info_pku"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/text_size_2"
			    android:textColor="@color/heavy_gray"
			    android:layout_alignLeft="@+id/my_info_info_head"
			    android:layout_below="@+id/my_info_info_head"
			    android:layout_marginTop="15dp"
			    />
			
			<TextView 
			    android:id="@+id/my_info_info_job"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/text_size_2"
			    android:textColor="@color/heavy_gray"
			    android:layout_alignLeft="@+id/my_info_info_pku"
			    android:layout_below="@+id/my_info_info_pku"
			    android:layout_marginTop="5dp"
			    />
			
			<TextView 
			    android:id="@+id/my_info_info_home"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/text_size_2"
			    android:textColor="@color/heavy_gray"
			    android:layout_alignLeft="@+id/my_info_info_job"
			    android:layout_below="@+id/my_info_info_job"
			    android:layout_marginTop="5dp"
			    />
			
			<TextView 
			    android:id="@+id/my_info_info_qq"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/text_size_2"
			    android:textColor="@color/heavy_gray"
			    android:layout_alignLeft="@+id/my_info_info_home"
			    android:layout_below="@+id/my_info_info_home"
			    android:layout_marginTop="5dp"
			    />
			
			<TextView 
			    android:id="@+id/my_info_info_tag"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/text_size_2"
			    android:textColor="@color/heavy_gray"
			    android:layout_alignLeft="@+id/my_info_info_qq"
			    android:layout_below="@+id/my_info_info_qq"
			    android:layout_marginTop="15dp"
			    android:layout_marginRight="20dp"
			    android:lineSpacingMultiplier="1.2"
			    />
			
			<View 
		        android:id="@+id/my_info_info_line2"
		        android:layout_width="match_parent"
		        android:layout_height="10dp"
		        android:layout_below="@+id/my_info_info_tag"
		        android:layout_marginTop="15dp"
		        android:background="@color/light_gray"
		        />
			
			<RelativeLayout 
			    android:id="@+id/my_info_info_layout1"
			    android:layout_width="match_parent"
			    android:layout_height="50dp"
			    android:layout_below="@+id/my_info_info_line2"
			    android:background="@drawable/question_list_item_background"
			    android:clickable="true"
			    >
			    
			    <TextView 
				    android:id="@+id/my_info_info_layout1_symbol"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="@string/friend_info_3"
				    android:textSize="@dimen/text_size_2"
				    android:textColor="@color/heavy_gray"
				    android:layout_centerVertical="true"		    
				    android:layout_marginLeft="20dp"
				    />
			    
			    <TextView 
				    android:id="@+id/my_info_info_layout1_name"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="@string/friend_info_6"
				    android:textSize="@dimen/text_size_2"
				    android:textColor="@color/heavy_gray"
				    android:layout_centerVertical="true"		    
				    android:layout_alignParentRight="true"
				    android:layout_marginRight="20dp"
				    />
			    
			    <ImageView 
				    android:id="@+id/my_info_info_layout1_head"
				    android:layout_width="30dp"
				    android:layout_height="30dp"
				    android:contentDescription="@string/app_name"
				    android:src="@drawable/head"
				    android:visibility="invisible"
				    android:layout_toLeftOf="@+id/my_info_info_layout1_name"
				    android:layout_marginRight="5dp"
				    android:layout_centerVertical="true"
				    />
			    
			</RelativeLayout>
			
			<View 
		        android:id="@+id/my_info_info_line3"
		        android:layout_width="match_parent"
		        android:layout_height="0.5dp"
		        android:layout_below="@+id/my_info_info_layout1"
		        android:background="@color/light_gray"
		        />
			
			<RelativeLayout 
			    android:id="@+id/my_info_info_layout2"
			    android:layout_width="match_parent"
			    android:layout_height="50dp"
			    android:layout_below="@+id/my_info_info_line3"
			    android:background="@drawable/question_list_item_background"
			    android:clickable="true"
			    >
			    
			    <TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="@string/friend_info_4"
				    android:textSize="@dimen/text_size_2"
				    android:textColor="@color/heavy_gray"
				    android:layout_centerVertical="true"		    
				    android:layout_marginLeft="20dp"
				    />
			    
			    <TextView 
				    android:id="@+id/my_info_info_question_count"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textSize="@dimen/text_size_2"
				    android:textColor="@color/heavy_gray"
				    android:layout_centerVertical="true"		    
				    android:layout_alignParentRight="true"
				    android:layout_marginRight="20dp"
				    />
			    
			</RelativeLayout>
			
			<View 
		        android:id="@+id/my_info_info_line4"
		        android:layout_width="match_parent"
		        android:layout_height="0.5dp"
		        android:layout_below="@+id/my_info_info_layout2"
		        android:background="@color/light_gray"
		        />
			
			<RelativeLayout 
			    android:id="@+id/my_info_info_layout3"
			    android:layout_width="match_parent"
			    android:layout_height="50dp"
			    android:layout_below="@+id/my_info_info_line4"
			    android:background="@drawable/question_list_item_background"
			    android:clickable="true"
			    >
			    
			    <TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="@string/friend_info_5"
				    android:textSize="@dimen/text_size_2"
				    android:textColor="@color/heavy_gray"
				    android:layout_centerVertical="true"		    
				    android:layout_marginLeft="20dp"
				    />
			    
			    <TextView 
				    android:id="@+id/my_info_info_answer_count"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textSize="@dimen/text_size_2"
				    android:textColor="@color/heavy_gray"
				    android:layout_centerVertical="true"		    
				    android:layout_alignParentRight="true"
				    android:layout_marginRight="20dp"
				    />
			    
			</RelativeLayout>
			
			<View
			    android:id="@+id/my_info_line_down"
		        android:layout_width="match_parent"
		        android:layout_height="10dp"
		        android:layout_below="@+id/my_info_info_layout3"
		        android:background="@color/light_gray"
		        />
			
			<RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:layout_marginTop="12dp"
		        android:layout_below="@+id/my_info_line_down"
		        >
				
		        <Button
			        android:id="@+id/my_info_button_change_password"
			        android:layout_width="match_parent"
			        android:layout_height="40dp"
			        android:text="@string/tab_text_4_6"
			        android:textSize="@dimen/text_size_2"
			        android:textColor="@color/white"
			        android:layout_alignParentLeft="true"
			        android:layout_marginLeft="20dp"
			        android:background="@color/bg_red"
			        android:layout_toLeftOf="@+id/edit_my_info_temp_view"
			        android:layout_marginRight="12dp"
			        />
			    
			    <View
			        android:id="@+id/edit_my_info_temp_view" 
			        android:layout_width="1dp"
			        android:layout_height="1dp"
			        android:background="#00000000"
			        android:layout_centerInParent="true"
			        />
			    
			    <Button
			        android:id="@+id/my_info_button_logout"
			        android:layout_width="match_parent"
			        android:layout_height="40dp"
			        android:text="@string/tab_text_4_7"
			        android:textSize="@dimen/text_size_2"
			        android:textColor="@color/white"
			        android:layout_alignParentRight="true"
			        android:layout_marginRight="20dp"
			        android:background="@color/bg_red"
			        android:layout_toRightOf="@+id/edit_my_info_temp_view"
			        android:layout_marginLeft="12dp"
			        />    
		        
		    </RelativeLayout>
		
		</RelativeLayout>
	    
	</ScrollView>
	
</RelativeLayout>