<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
    
    <RelativeLayout 
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:background="@color/red"
			>
			
	        <Button 
			    android:id="@+id/invite_info_button_back"
			    android:layout_width="50dp"
			    android:layout_height="30dp"
			    android:layout_centerVertical="true"
			    android:layout_alignParentLeft="true"
			    android:layout_marginLeft="15dp"
			    android:textColor="@color/white"
				android:textSize="@dimen/text_size_1"
				android:background="@null"
			    />
	        
	        <TextView 
	            android:id="@+id/invite_info_title"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerVertical="true"
			    android:textColor="@color/white"
			    android:textSize="@dimen/text_size_1"
			    android:layout_toRightOf="@+id/invite_info_button_back"
			    android:layout_marginLeft="20dp"
			    />
	     </RelativeLayout>
    
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    >

	    <TextView 
	        android:id="@+id/invite_info_text1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/red"
			android:textSize="@dimen/text_size_2"
			android:layout_marginLeft="15dp"
			android:layout_centerVertical="true"
			/>
	    
	    <TextView 
	        android:id="@+id/invite_info_text2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/red"
			android:textSize="@dimen/text_size_2"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="20dp"
			/>
	
	</RelativeLayout>
	
    <ListView 
		android:id="@+id/invite_info_list"
		android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:smoothScrollbar="true"
	    android:cacheColorHint="#00000000"
	    android:background="@color/white"
	    android:divider="@null"
		/>
    
</LinearLayout>
