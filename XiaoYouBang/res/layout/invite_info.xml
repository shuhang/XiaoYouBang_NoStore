<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
    
    <RelativeLayout 
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:background="@color/bg_red"
			>
			
	        <Button 
			    android:id="@+id/invite_info_button_back"
			    android:layout_width="40dp"
			    android:layout_height="40dp"
			    android:layout_centerVertical="true"
			    android:layout_alignParentLeft="true"
			    android:layout_marginLeft="3dp"
			    android:textColor="@color/white"
				android:textSize="@dimen/text_size_1"
				android:background="@null"
			    />
	        
	        <TextView 
	            android:id="@+id/invite_info_title"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerVertical="true"
			    android:textColor="@color/white"
			    android:textSize="@dimen/text_size_1"
			    android:layout_centerHorizontal="true"
			    />
	     </RelativeLayout>
    
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    >

	    <TextView 
	        android:id="@+id/invite_info_text1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/text_red"
			android:textSize="@dimen/text_size_2"
			android:layout_marginLeft="12dp"
			android:layout_centerVertical="true"
			/>
	    
	    <TextView 
	        android:id="@+id/invite_info_text2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/text_red"
			android:textSize="@dimen/text_size_2"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="12dp"
			/>
	    
	    <ImageView 
	        android:id="@+id/invite_info_check"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_alignBottom="@+id/invite_info_text2"
	        android:layout_toLeftOf="@+id/invite_info_text2"
	        android:layout_marginRight="5dp"
	        android:visibility="invisible"
	        android:contentDescription="@string/app_name"
	        android:src="@drawable/yes"
	        />
	
	</RelativeLayout>
	
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_gray" 
        />
	
    <ListView 
		android:id="@+id/invite_info_list"
		android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:smoothScrollbar="true"
	    android:cacheColorHint="#00000000"
	    android:background="@color/white"
	    android:divider="@null"
		/>
    
</LinearLayout>
