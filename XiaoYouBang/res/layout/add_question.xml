<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    
    <RelativeLayout 
        android:id="@+id/add_question_layout1"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_alignParentTop="true"
		android:background="@color/bg_red"
		>
		
        <Button 
		    android:id="@+id/add_question_button_back"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:layout_centerVertical="true"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="3dp"
		    android:textColor="@color/white"
			android:textSize="@dimen/text_size_1"
			android:background="@null"
		    />
        
        <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:text="@string/add_question_text1"
		    android:textColor="@color/white"
		    android:textSize="@dimen/text_size_1"
		    android:layout_centerHorizontal="true"
		    />
		    
		<Button 
		    android:id="@+id/add_question_button_finish"
		    android:layout_width="60dp"
		    android:layout_height="40dp"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="15dp"
		    android:textColor="@color/white"
		    android:textSize="@dimen/text_size_1"
		    android:text="@string/add_question_text2"
		    android:background="@null"
		    />
        
	</RelativeLayout>
	
    <EditText 
        android:id="@+id/add_question_input1"
	    android:layout_width="match_parent"
	    android:layout_height="100dp"
	    android:layout_below="@+id/add_question_layout1"
	    android:background="#ffffff"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:paddingTop="20dp"
	    android:paddingBottom="10dp"
	    android:maxLength="40"
	    android:lineSpacingMultiplier="1.3"
	    android:textSize="@dimen/text_size_1"
	    android:hint="@string/add_question_hint1"
		android:inputType="textMultiLine"
		android:singleLine="false"
		android:scrollHorizontally="false"
		android:gravity="top"
        />
    
    <View
        android:id="@+id/add_question_line"
       	android:layout_width="20dp"
	    android:layout_height="0.5dp"
	    android:layout_below="@+id/add_question_input1"
	    android:background="@color/gray"
        />
    
    <EditText 
        android:id="@+id/add_question_input2"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/add_question_line"
	    android:layout_above="@+id/add_question_picture"
	    android:layout_marginTop="10dp"
	    android:background="#ffffff"
	    android:maxLength="2000"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:lineSpacingMultiplier="1.3"
	    android:textSize="@dimen/text_size_2"
	    android:hint="@string/add_question_hint2"
		android:inputType="textMultiLine"
		android:singleLine="false"
		android:scrollHorizontally="false"
		android:gravity="top"
        />
    
    <Button 
        android:id="@+id/add_question_picture"
        android:layout_width="40dp"
	    android:layout_height="40dp"
	    android:layout_above="@+id/add_question_layout2"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="15dp"
	    android:layout_marginBottom="15dp"
	    android:background="@drawable/picture"
	    android:textColor="@color/white"
	    android:gravity="center|bottom"
	    android:paddingBottom="3dp"
	    android:textSize="@dimen/text_size_3"
        />
	
    <RelativeLayout 
        android:id="@+id/add_question_layout2"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_alignParentBottom="true"
		android:background="@color/gray"
		>
		
        <CheckBox 
            android:id="@+id/add_question_checkbox"
            android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:layout_centerVertical="true"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="15dp"
		    android:checked="false"
		    android:button="@null"
		    android:background="@drawable/check_no"
            />
        
        <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:text="@string/hide_name"
		    android:textColor="@color/white"
		    android:textSize="@dimen/text_size_1"
		    android:layout_toRightOf="@+id/add_question_checkbox"
		    android:layout_marginLeft="10dp"
		    />
        
	</RelativeLayout>

</RelativeLayout>
